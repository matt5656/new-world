List<Batch> getBatches(int no) throws SQLException {
		List<Batch> list=new ArrayList<>();
		Batch b=new Batch();
		try{
			Class.forName(driver);
			Connection con = DriverManager.getConnection(url,user,pass);
			
			String query="select * from Batch_Dtls where num_of_trainees>="+no;
			Statement stmt=con.createStatement();
			ResultSet rs=stmt.executeQuery(query);
			
			while(rs.next()) {
				b.setBatchNum(rs.getString("batch_num"));
				b.setLocation(rs.getString("location"));
				b.setNumTrainees(rs.getInt("num_of_trainees"));
				list.add(b);
			}
			
			}
			catch (Exception e) {
				
			}
			finally
			{
				if(pstmt!=null)
					pstmt.close();
					if(con!=null)
				con.close();
			}
		return list;
	}
